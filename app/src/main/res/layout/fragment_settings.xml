<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/small_text"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txt_clr_grey"
                android:layout_marginTop="24dp"
                android:text="Setting"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#0D03DAC5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/shop_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/shop_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/teal_700"
                        android:text="Shop Profile"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#0D03DAC5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/terminalBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/finance_measure_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/teal_700"
                        android:text="Terminal Balance"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#0D03DAC5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/testprinter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/printer_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/teal_700"
                        android:text="Test Printer"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#0D03DAC5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/pin_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/safe_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/teal_700"
                        android:text="Change Pin Code"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>




</LinearLayout>