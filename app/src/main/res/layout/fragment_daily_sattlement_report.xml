<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".fragments.DailySattlementReportFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Daily Sattlement Report"/>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:id="@+id/iteeem"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="#D6D6D6"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:weightSum="10"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#9C27B0"
                    android:text="STC"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/txt_clr_grey"
                    android:text="20 SAR"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="6"
                android:gravity="start"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/txt_clr_grey"
                    android:text="STC-Voice"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF5722"
                        android:text="Number of Cards: "/>
                    <TextView
                        android:layout_marginEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF5722"
                        android:text="122"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item2"
        app:layout_constraintTop_toBottomOf="@id/iteeem"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="#D6D6D6"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:weightSum="10"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#9C27B0"
                    android:text="STC"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/txt_clr_grey"
                    android:text="20 SAR"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="6"
                android:gravity="start"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/txt_clr_grey"
                    android:text="STC-Voice"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF5722"
                        android:text="Number of Cards: "/>
                    <TextView
                        android:layout_marginEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF5722"
                        android:text="122"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:pointerIcon="wait"
        android:backgroundTint="#F6F0F0"
        app:rippleColor="@color/purple_200"
        android:src="@drawable/ic_outline_print_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>