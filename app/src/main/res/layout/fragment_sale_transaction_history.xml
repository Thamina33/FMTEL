<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200"
    tools:context=".fragments.SaleTransactionHistoryFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Financial sales transaction"/>
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toBottomOf="@id/title"
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:weightSum="10"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#F44336"
                        android:text="1369084"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="13/11/2022"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/very_small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/txt_clr"
                            android:text="115"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/very_small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/txt_clr"
                            android:text="SAR"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="13:69:84"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4.5"
                    android:gravity="start"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="Lebra"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF9800"
                        android:text="21050900230098"/>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight=".5"
                    android:background="@drawable/printer_hardware_icon"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toBottomOf="@id/cv1"
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:weightSum="10"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#F44336"
                        android:text="1369084"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="13/11/2022"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="start"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/very_small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/txt_clr"
                            android:text="115"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/very_small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/txt_clr"
                            android:text="SAR"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="13:69:84"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4.5"
                    android:gravity="start"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text="Lebra"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_small_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#FF9800"
                        android:text="21050900230098"/>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight=".5"
                    android:background="@drawable/printer_hardware_icon"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>