<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:visibility="visible"
        android:id="@+id/print_img"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:background="#ffffff"
        android:layout_height="wrap_content" 
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/Brand_name"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/star_line"
             android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text"
            android:gravity="center"
           />
        <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_weight="5"
                android:gravity="start|center"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="Date:"
                android:textColor="@color/black"
                android:textSize="14sp"

                android:textStyle="bold" />
            <TextView
                    android:id="@+id/date"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11/12/2022"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                   android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_weight="5"
            android:gravity="start|center"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance:"
                android:textColor="@color/black"
               android:textSize="14sp"
                android:textStyle="bold"

                android:layout_gravity="center"
               />
            <TextView
                android:id="@+id/available_balance"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11122022"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
               android:textSize="14sp"
                android:textStyle="bold"

                android:layout_gravity="center"
               />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_weight="5"
        android:gravity="start|center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Balance:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/received_balance"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11122022"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_weight="5"
        android:gravity="start|center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Balance:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/currentBalance"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11122022"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            />
    </LinearLayout>


        <TextView
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/star_line"
             android:maxLines="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
           android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
        <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Copy"
            android:textColor="@color/black"
           android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="start"
           />
        <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By FM TEL"
            android:textColor="@color/black"
           android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>
        <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By SPINNER TECH"
            android:textColor="@color/black"
           android:textSize="14sp"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="4dp"/>


    
</LinearLayout>