<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".fragments.editShopInformationFragment">
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/title"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Edit Shop Profile"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#4D018786"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Shop Brand Name"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/shop_name"
                            android:background="@color/white"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"

                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Authorised Person Name"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/owner_name"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Region Name"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/region_name"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="City Name"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/city"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="District Name"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/district"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Address Details"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/address"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="textMultiLine"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:minLines="3"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:gravity="top|start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Representative Id"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/rep_id"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Registration Date"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/reg_date"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:text=""/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="32dp"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancle_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancle"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/small_text"
                    android:backgroundTint="@color/btn_clr"
                    android:textColor="@color/teal_700"
                    android:layout_weight=".5"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Update_btn"
                    android:layout_width="0dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/small_text"
                    android:backgroundTint="@color/btn_clr"
                    android:textColor="@color/teal_700"
                    android:layout_weight=".5"/>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>