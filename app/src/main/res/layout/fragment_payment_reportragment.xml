<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.payment.PaymentReportragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#4D018786"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="Start Date"/>
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="4"
                    android:text="11/11/2022"/>
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/btn_clr"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="12:30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="End Date"/>
                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="4"
                    android:text="11/11/2022"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/btn_clr"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:text="12:30"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv2"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#4D018786"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Payment"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/small_text"
                app:cornerRadius="24dp"
                android:backgroundTint="@color/btn_clr"
                android:textColor="@color/teal_700"
                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
         android:pointerIcon="wait"
        android:backgroundTint="#F6F0F0"
        app:rippleColor="@color/purple_200"
        android:src="@drawable/ic_outline_print_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item2"
        app:layout_constraintTop_toBottomOf="@id/cv2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="#F4F0F0"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"

            android:paddingHorizontal="8dp"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:weightSum="10"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_weight="5"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="TBA: "
                       android:textSize="@dimen/small_text"
                       android:textColor="#F44336"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="1234567890"
                       android:textSize="@dimen/small_text"
                       android:textColor="@color/txt_clr_grey"
                       android:fontFamily="@font/poppins_regular"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_weight="5"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="Date: "
                       android:textSize="@dimen/small_text"
                       android:textColor="#F44336"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="12/11/2022"
                       android:textSize="@dimen/small_text"
                       android:textColor="#FFC107"
                       android:fontFamily="@font/poppins_bold"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Amount: "
                        android:textSize="@dimen/small_text"
                        android:textColor="#F44336"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1234.567"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/txt_clr_grey"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="New BAlance: "
                    android:textSize="@dimen/small_text"
                    android:textColor="#F44336"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12112.022"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/txt_clr_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>