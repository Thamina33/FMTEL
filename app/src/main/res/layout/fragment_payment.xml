<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PaymentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#FF5722"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:padding="4dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available Balance:  "
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/small_text"
                            />
                        <TextView
                            android:id="@+id/available_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/small_text"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/stc_go"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/package_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/medium_text"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/txt_clr"
                        android:text=""
                        />
                </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_height="160dp">
                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView

                            android:background="@color/purple_700"
                            android:layout_width="match_parent"
                            android:id="@+id/back_img"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:layout_marginStart="12dp"
                            android:id="@+id/packageId"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="8dp"
                            android:textSize="@dimen/medium_text"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"
                            android:text=""
                            />
                        <ImageView
                            android:id="@+id/backBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="top|end"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/logo"/>

                        <LinearLayout
                            android:background="#56FFFFFF"
                            app:layout_constraintTop_toBottomOf="@id/packageId"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp"
                            android:layout_gravity="bottom|start"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textSize="@dimen/small_text"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/white"
                                android:text=""
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/medium_text"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="4dp"
                                android:text="SAR"
                                />
                        </LinearLayout>


                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/purple_700"
                    app:cardCornerRadius="8dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_height="wrap_content">

                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:text="Number of Card: "
                        />

                    <TextView
                        android:id="@+id/pricee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:text=""
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:text="Total Price: "
                        />
                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:layout_marginHorizontal="4dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:text="SAR"
                        />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:text="Number of e-Vouchers: "
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/txt_clr"
                        android:layout_marginHorizontal="4dp"
                        android:text="1"
                        />


                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/print_btn"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#9F9E9E"
                    android:shadowColor="@color/teal_700"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:text="Print"
                    />
                <include
                    android:id="@+id/invoicePage"
                    layout="@layout/invoice_design"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pbar"
            android:progressBackgroundTint="#E91E63"
            android:indeterminate="true"
            android:indeterminateTint="#E91E63"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</LinearLayout>